<h2>Filmy</h2>

<%= form_tag movies_path, method: :get do %>
  <div class="input-group">
    <%= text_field_tag :q, params[:q], class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag "Szukaj", class: "btn btn-default" %>
    </span>
  </div>
<% end %>

<h3>
   <%= link_to 'Dodaj nowy film', new_movie_path%>
</h3>
<% @movies.each do |movie| %>
  <div class="list-group-item-text">
    <%= link_to "Film #{movie.title}, Gatunek #{movie.kind}", movie_path(movie) %>
    <%= link_to 'Pokaż', movie_path(movie), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Zmień', edit_movie_path(movie), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Usuń', movie_path(movie),
        method: :delete, data: { confirm: "Jesteś pewien?" },class: "btn btn-xs btn-danger" %>
  </div>
<% end %>
