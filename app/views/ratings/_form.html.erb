<%= form_for([@movie, @rating]) do |f| %>
  <div class="form-group">
    <%= f.label :Tytuł %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Treść %>
    <%= f.number_field :rating, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Zapisz', class: "btn btn-primary"%>
  </div>
<% end %>
